select top 10
	W.Id,
	W.Text,
	O.Text
	--'Text' as Value
from
	WordList:Word as W
inner join WordList:Translation as T
	on T.SourceWordId = W.Id
inner join WordList:Word as O
	on O.Id = T.TargetWordId
WHERE
	W.Text = 'Moon'
	
	
